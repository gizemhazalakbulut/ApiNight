@model List<ApiNight.WebUI.Dtos.ProductDtos.CreateProductDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /> <br />
<form method="post">
        <label>Ürün Adı</label>
        <input type="text" name="ProductName" class="form-control"/>
        <br />
        <label>Ürün Fiyatı</label>
        <input type="number" name="ProductPrice" class="form-control" />
        <br />
        <label>Ürün Stok Sayısı</label>
        <input type="number" name="ProductStock" class="form-control" />
        <br />
        <button class="btn btn-info">Ürünü Kaydet</button>
</form>
</div>

